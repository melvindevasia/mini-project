<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/admin.css" />
    <link rel="stylesheet" href="/stylesheets/table.css" />
    <link rel="stylesheet" href="/stylesheets/deletebutton.css" />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/uicons-regular-straight/css/uicons-regular-straight.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"
    />
    <title>Admin Panel</title>
    <style>
      .bus-table { width: 100%; border-collapse: collapse; } .bus-table th,
      .bus-table td { padding: 8px; border: 1px solid #ccc; text-align: left; }
      .bus-table th { background-color: #f2f2f2; } #addBusModal {
      background-color: #fff; border: 1px solid #ddd; border-radius: 5px;
      padding: 20px; width: 500px; max-width: 80%; position: fixed; top: 50%;
      left: 50%; transform: translate(-50%, -50%); z-index: 10; display: none; }
      .modal-content { display: flex; flex-direction: column; } .close { color:
      #aaa; font-size: 28px; font-weight: bold; cursor: pointer; position:
      absolute; right: 10px; top: 10px; } h2 { margin-bottom: 15px; }
      .form-group { margin-bottom: 10px; } label { display: block;
      margin-bottom: 5px; } input[type="text"], input[type="number"],
      input[type="time"] { padding: 8px; border: 1px solid #ccc; border-radius:
      3px; width: 100%; }
    </style>
  </head>
  <body>
    <nav>
      <div class="logo-name">
        <div class="logo-image">
          <img src="data/logo.png" alt="Logo" />
        </div>
        <span class="logo_name">Journey Sync.com</span>
      </div>
      <div class="menu-items">
        <ul class="nav-links">
          <li><a href="/admin"><i class="uil uil-estate"></i><span
                class="link-name"
              >Dashboard</span></a></li>
          <li><a href="/admin/adminUsers"><i class="fi fi-rs-user"></i><span
                class="link-name"
              >Users</span></a></li>
          <li><a href="/admin/buses"><i class="fi fi-rr-bus"></i><span
                class="link-name"
              >Buses</span></a></li>
          <li><a href="/admin/reservation"><i
                class="fi fi-rr-memo-circle-check"
              ></i><span class="link-name">Reservations</span></a></li>
          <li><a href="/admin/feedbacks"><i
                class="fi fi-rr-smiley-comment-alt"
              ></i><span class="link-name">Feedbacks</span></a></li>
          <li><a href="/admin/routes"><i class="fi fi-rs-route"></i><span
                class="link-name"
              >Routes</span></a></li>
        </ul>
        <ul class="logout-mode">
          <li><a id="popupButton"><i class="uil uil-signout"></i><span
                class="link-name"
              >Logout</span></a></li>
          <li class="mode"><a href="#"><i class="uil uil-moon"></i><span
                class="link-name"
              >Dark Mode</span></a>
            <div class="mode-toggle"><span class="switch"></span></div>
          </li>
        </ul>
      </div>
    </nav>
    <section class="dashboard">
      <div class="top"><i class="uil uil-bars sidebar-toggle"></i></div>
      <div class="popup" id="popupMessage">
        <span class="close" onclick="closePopup()">&times;</span>
        <p>Are you sure you want to sign out?</p>
        <button id="signout">Logout</button>
      </div>
      <div class="dash-content">
        <div class="overview">
          <div class="title"><i class="fi fi-rs-bus-alt"></i><span
              class="text"
            >Buses</span></div>
          <div class="field" id="field">
            <table class="bus-table">
              <thead>
                <tr>
                  <th>Bus Id</th>
                  <th>Bus Registration Number</th>
                  <th>Bus Name</th>
                  <th>Bus Type</th>
                  <th>Seats</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each buses}}
                  <tr>
                    <td>{{busid}}</td>
                    <td>{{busregno}}</td>
                    <td>{{busname}}</td>
                    <td>{{bustype}}</td>
                    <td>{{seats}}</td>
                    <td><button
                        class="delete-btn"
                        onclick="deleteBus('{{_id}}')"
                      >Delete</button></td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <button id="addBusBtn" class="add-bus-btn">Add Bus</button>
        </div>
      </div>
    </section>
   
      </div>
    </div>

    <!-- Your custom JavaScript files -->
    {{! <script src="/javascripts/adminLogout.js"></script> }}
    <script src="/javascripts/modal.js"></script>
    <script src="/javascripts/modeToggle.js"></script>
    <script src="/javascripts/adminBuses.js"></script>
  </body>
</html>